generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String    @id @default(cuid())
  name     String    @unique
  password String
  articles article[]
}

model article {
  id          String   @id @default(cuid())
  name        String
  body        String   @default("法律不容藐视，它自会证明它的价值。")
  users       user[]
  update_time DateTime @default(now()) @updatedAt
}
